.objective-created-btn{
  background-color: #333;
  color: #fff;
  margin-bottom: 10px;
}

.objective-created-btn_hover{
  background-color: #999;
}

.objective-item{
  position: relative;
  background-color: #f5f5f5;
  margin-bottom: 5px;
  padding: 10px;
  overflow: hidden;
}

.objective-item.finished:after{
  position: absolute;
  top: -20px;
  right: -20px;
  width: 80px;
  height: 80px;
  border: 2px solid #999;
  content: '完成';
  line-height: 78px;
  text-align: center;
  font-size: 22px;
  color: #999;
  border-radius: 50%;
  opacity: .4;
  transform: rotate(-45deg);
}

.objective-title{
  font-size: 14px;
  line-height: 20px;
  color: #333;
  margin-bottom: 4px;
}

.objective-created_time{
  font-size: 12px;
  color: #999;
}